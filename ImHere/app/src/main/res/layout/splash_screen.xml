<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="UselessParent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#cc4400">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/thump_round"
        app:srcCompat="@mipmap/imhere"
        android:id="@+id/iconSplash"
        tools:ignore="ContentDescription"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/thump_round"
        android:id="@+id/iconSplash1"
        tools:ignore="ContentDescription"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSplash1"
        android:text="Share your location"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:fontFamily="cursive"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSplash2"
        android:layout_weight="1"
        android:text="Follow some object's location"
        tools:ignore="HardcodedText,ObsoleteLayoutParam"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textSize="18sp"
        android:layout_below="@+id/textSplash1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSplash3"
        android:text="Find shared your friend's place or other place"
        tools:ignore="HardcodedText"
        android:layout_marginTop="23dp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/textSplash2"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive" />

    <TextView
        android:text="Wellcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/textSplashWellcome"
        android:textAlignment="center"
        android:textSize="30sp"
        android:fontFamily="monospace"
        android:textStyle="normal|bold"
        android:layout_below="@+id/iconSplash"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />
</RelativeLayout>