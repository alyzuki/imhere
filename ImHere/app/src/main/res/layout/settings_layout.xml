<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.here.zuki.imhere.Expandable
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:header="Search"
        app:headerBg="#cce6ff"
        app:containerBg="#e6f3ff"
        app:headerfontsize="16"
        app:paddingStart="30dp"
        android:orientation="vertical"
        android:id="@+id/SearchExpand">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            tools:ignore="HardcodedText"
            android:layout_marginStart="30dp"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:ignore="HardcodedText"
            android:layout_marginStart="30dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/search_distance_container">

            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button2"
                tools:ignore="HardcodedText"
                android:layout_weight="1" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                tools:ignore="HardcodedText,InefficientWeight" />
        </LinearLayout>

    </com.here.zuki.imhere.Expandable>

    <com.here.zuki.imhere.Expandable
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:header="Add a new place "
        app:headerBg="@color/cast_expanded_controller_ad_container_white_stripe_color"
        app:headerfontsize="16"
        app:paddingStart="30dp"
        android:orientation="vertical"
        android:id="@+id/AddExpand">

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox3"
            tools:ignore="HardcodedText" />

    </com.here.zuki.imhere.Expandable>

    <com.here.zuki.imhere.Expandable
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:header="Object Followable"
        app:headerBg="@color/cast_expanded_controller_ad_container_white_stripe_color"
        app:headerfontsize="16"
        app:paddingStart="30dp"
        android:orientation="vertical"
        android:id="@+id/FollowExpand">

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            tools:ignore="HardcodedText" />

    </com.here.zuki.imhere.Expandable>

    <com.here.zuki.imhere.Expandable
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:header="S.O.S "
        app:headerBg="@color/cast_expanded_controller_ad_container_white_stripe_color"
        app:headerfontsize="16"
        app:paddingStart="30dp"
        android:orientation="vertical"
        android:id="@+id/SOSExpand">

        <CheckBox
            android:text="CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            tools:ignore="HardcodedText"
            android:layout_marginStart="30dp" />

    </com.here.zuki.imhere.Expandable>
</LinearLayout>