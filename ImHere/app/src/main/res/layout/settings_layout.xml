<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="end">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:ignore="DisableBaselineAlignment,UselessLeaf"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button11"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle,HardcodedText,InefficientWeight,NestedWeights"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:background="@mipmap/imhere"
                        android:gravity="start"
                        android:paddingBottom="2dp"
                        android:paddingRight="2dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSearch"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle,HardcodedText,NestedWeights"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:background="@android:drawable/ic_menu_search" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnAddNew"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle,HardcodedText"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:background="@android:drawable/ic_menu_myplaces" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSOS"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle,HardcodedText"
                        style="@style/Widget.AppCompat.Button.Small"
                        android:background="@drawable/sos_dark" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnSettings"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle,HardcodedText"
                        android:background="@android:drawable/ic_menu_preferences"
                        style="@style/Widget.AppCompat.Button.Small" />
                </LinearLayout>

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:id="@+id/settings_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="ExtraText,UselessLeaf"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/expandableButton1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#9c27b0"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:onClick="expandableButton1"
                        android:paddingRight="10dp"
                        android:text="Search"
                        android:textColor="#fff"
                        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
                        android:gravity="center_vertical|start"
                        android:paddingStart="20dp" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/expandableLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/expandableButton1"
                        android:background="#ba68c8"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="16dp"
                        tools:ignore="ObsoleteLayoutParam"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        app:ael_interpolator="accelerate"
                        app:ael_orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/check_notifiaction"
                                android:text="Notification when I'm close enough"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                tools:ignore="RtlHardcoded,RtlSymmetry">

                                <TextView
                                    android:text="I'm within radius"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView4"
                                    android:layout_weight="1"
                                    tools:ignore="HardcodedText" />

                                <EditText
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:ems="8"
                                    android:id="@+id/radius_notification"
                                    android:layout_weight="1"
                                    tools:ignore="HardcodedText,LabelFor"
                                    android:text="1"
                                    android:maxLines="1"
                                    android:maxLength="1"
                                    android:layout_gravity="center"
                                    android:layout_width="10dp" />

                                <TextView
                                    android:text="km"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView2"
                                    android:layout_weight="1"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <CheckBox
                                android:text="Phone's Numbers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkBox3"
                                tools:ignore="HardcodedText" />

                            <CheckBox
                                android:text="Email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkBox2"
                                tools:ignore="HardcodedText" />

                            <CheckBox
                                android:text="Social ID"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkBox"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="TextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                    <Button
                        android:id="@+id/expandableButton2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expandableLayout1"
                        android:background="#2196f3"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:onClick="expandableButton2"
                        android:paddingRight="10dp"
                        android:text="Add a place"
                        android:textColor="#fff"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry"
                        android:gravity="center_vertical|start"
                        android:paddingStart="20dp" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/expandableLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/expandableButton2"
                        android:background="#90caf9"
                        android:padding="16dp"
                        tools:ignore="ObsoleteLayoutParam"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        app:ael_interpolator="accelerate"
                        app:ael_orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:text=""/>
                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                    <Button
                        android:id="@+id/expandableButton3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/expandableLayout2"
                        android:background="#10a106"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:onClick="expandableButton3"
                        android:paddingRight="10dp"
                        android:text="S.O.S"
                        android:textColor="#fff"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry"
                        android:paddingStart="20dp"
                        android:gravity="center_vertical|start" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/sosExLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/expandableButton3"
                        android:background="#9010a106"
                        android:padding="16dp"
                        tools:ignore="ObsoleteLayoutParam"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        app:ael_interpolator="accelerate"
                        app:ael_orientation="vertical">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <CheckBox
                                android:text="Display S.O.S button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/checkShowSOSBtn"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="Broadcast my location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView3"
                                tools:ignore="HardcodedText" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/sharemylocationbox"
                                android:layout_marginLeft="20dp"
                                tools:ignore="RtlHardcoded">

                                <CheckBox
                                    android:text="Facebook"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/checkSOSshareface"
                                    tools:ignore="HardcodedText" />

                                <CheckBox
                                    android:text="Zalo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/checkSOSsharezalo"
                                    tools:ignore="HardcodedText" />

                                <CheckBox
                                    android:text="All people"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/checkSOSsharenears"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:text="" />
                        </LinearLayout>

                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                    <Button
                        android:id="@+id/expandableButton4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sosExLayout"
                        android:background="#ff9800"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:onClick="expandableButton4"
                        android:paddingRight="10dp"
                        android:text="Tracking"
                        android:textColor="#fff"
                        tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded,RtlSymmetry"
                        android:gravity="center_vertical|start"
                        android:paddingStart="20dp" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/trackingExLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/expandableButton4"
                        android:background="#ffcc80"
                        android:padding="16dp"
                        tools:ignore="ObsoleteLayoutParam"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        app:ael_interpolator="accelerate"
                        app:ael_orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:text="" />
                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                </LinearLayout>

            </ScrollView>
        </RelativeLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>